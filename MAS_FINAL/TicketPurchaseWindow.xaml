<Window x:Class="MAS_FINAL.TicketPurchaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zakup Biletu" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Zakup Biletu" FontSize="24" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBlock Text="Rodzaj Biletu:"/>
            <ComboBox x:Name="TicketTypeComboBox" Width="200" Margin="0,10">
                <ComboBoxItem Content="Normalny"/>
                <ComboBoxItem Content="Specjalny"/>
            </ComboBox>
            <TextBlock Text="Liczba biletów:"/>
            <TextBox x:Name="TicketQuantityTextBox" Width="200" Margin="0,10"/>
            <Button Content="Kup Bilet" Width="200" Height="40" Margin="0,10" Click="PurchaseTicket_Click"/>
            <Button Content="Zaktualizuj Bilet do Specjalnego" Width="200" Height="40" Margin="0,10" Click="UpgradeTicket_Click"/>
        </StackPanel>
    </Grid>
</Window>