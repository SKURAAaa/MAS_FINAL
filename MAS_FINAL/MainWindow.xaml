<Window x:Class="MAS_FINAL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zoo Management System" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Zoo zaloguj jako" FontSize="24" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <Button Content="Klient" Width="200" Height="40" Margin="0,10" Click="ClientLogin_Click"/>
            <Button Content="Pracownik" Width="200" Height="40" Margin="0,10" Click="EmployeeLogin_Click"/>
            <Button Content="Gość" Width="200" Height="40" Margin="0,10" Click="GuestLogin_Click"/>
            <Button Content="Zapisz dane" Width="200" Height="40" Margin="0,10" Click="SaveData_Click"/>
            <Button Content="Wczytaj dane" Width="200" Height="40" Margin="0,10" Click="LoadData_Click"/>
            <Button Content="Wczytaj zwierzęta" Width="200" Height="40" Margin="0,10" Click="LoadAnimals_Click"/>
        </StackPanel>
    </Grid>
</Window>